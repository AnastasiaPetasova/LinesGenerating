<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Canvas fx:id="canvas" GridPane.rowIndex="0"/>

    <HBox GridPane.rowIndex="1" spacing="20" alignment="CENTER_RIGHT">
        <TextField fx:id="input_textField" />
        <Button fx:id="clear_button" text="Очистить"/>
        <Button fx:id="polygon_button" text="Многоугольник"/>
        <Button fx:id="circle_button" text="Круг"/>
        <Button fx:id="bezier_button" text="Кривая Безье"/>
        <RadioButton fx:id="point_click_button" text="Поставить точку"/>
        <RadioButton fx:id="dfs_coloring_button" text="Закраска обходом в ширину"/>
        <RadioButton fx:id="segment_coloring_button" text="Закраска отрезками"/>

    </HBox>
</GridPane>